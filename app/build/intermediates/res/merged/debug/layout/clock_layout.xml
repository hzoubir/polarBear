<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:rs="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:id="@+id/clock_layout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/digit_line_height"
            android:background="@android:color/black"
            android:id="@+id/top_top_layout"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/digit_line_height"

            />

        <LinearLayout
            android:layout_width="@dimen/digit_line_height"
            android:layout_height="fill_parent"
            android:background="@android:color/black"
            android:id="@+id/top_left_layout"
            android:layout_alignParentLeft="true"
            android:orientation="vertical"
            android:paddingTop="@dimen/digit_line_height"
            />
        <LinearLayout
            android:layout_width="@dimen/digit_line_height"
            android:layout_height="fill_parent"
            android:background="@android:color/black"
            android:id="@+id/top_right_layout"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:paddingTop="@dimen/digit_line_height"

            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/digit_line_height"
        android:background="@android:color/black"
        android:id="@+id/middle_layout"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/digit_line_height"
            android:background="@android:color/black"
            android:id="@+id/bottom_top_layout"
            android:layout_alignParentBottom="true"
            />
        <LinearLayout
            android:layout_width="@dimen/digit_line_height"
            android:layout_height="match_parent"
            android:background="@android:color/black"
            android:id="@+id/bottom_left_layout"
            android:layout_alignParentLeft="true"
            android:orientation="vertical"

            />
        <LinearLayout
            android:layout_width="@dimen/digit_line_height"
            android:layout_height="match_parent"
            android:background="@android:color/black"
            android:id="@+id/bottom_right_layout"
            android:layout_alignParentRight="true"
            android:orientation="vertical"

            />
    </RelativeLayout>


</LinearLayout>